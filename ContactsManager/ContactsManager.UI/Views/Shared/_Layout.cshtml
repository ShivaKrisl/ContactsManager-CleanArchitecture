<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/StyleSheet.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
</head>
<body>
        <div class="container">
            <div class="page-content">

                <div class="margin-bottom">

                    <div class="flex" id="top-bar-div"></div>
                        <div class="flex-1" id="app-title-div">
                            <h1 class="app-tile">
                                <i class="fa-solid fa-people-simple"></i>
                                Contacts Manager
                            </h1>
                        </div>
                    <div class="flex-1 pr" id="search-box-div">


                    <div class="navbar account-links">

                        <ul class="list-container">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <i class="fa-solid fa-user"></i>
                                <li>
                                    @User.Identity?.Name
                                </li>

                                if (User.IsInRole("ADMIN"))
                                {
                                    <li>
                                        <a asp-controller="Home" asp-action="Index" asp-area="Admin">Admin Home</a>
                                    </li>
                                }

                                <li class="list link-hover"><a asp-controller="Account" asp-action="Logout"> Logout </a></li>
                            }
                            else
                            {

                                if (ViewBag.CurrentUrl == "~/Account/Register")
                                {
                                    <li class="list link-hover nav-active">
                                        <a asp-controller="Account" asp-action="Register">Register</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="list link-hover">
                                        <a asp-controller="Account" asp-action="Register">Register</a>
                                    </li>
                                }
                                if (ViewBag.CurrentUrl == "~/Account/Login")
                                {
                                    <li class="list link-hover nav-active">
                                        <a asp-controller="Account" asp-action="Login">Login</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="list link-hover">
                                        <a asp-controller="Account" asp-action="Login">Login</a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>

                    <div class="navbar mb">
                    <ul class="list-container">
                        @if (ViewBag.CurrentUrl == "~/Persons/Index")
                        {
                            <li class="list link-hover nav-active">
                                <a asp-controller="Persons" asp-action="Index">Persons</a>
                            </li>
                        }
                        else
                        {
                            <li class="list link-hover">
                                <a asp-controller="Persons" asp-action="Index">Persons</a>
                            </li>
                        }
                        @if (ViewBag.CurrentUrl == "~/Countries/Add")
                        {
                            <li class="list link-hover nav-active">
                                <a asp-controller="Countries" asp-action="Add">Add Country</a>
                            </li>
                        }
                        else
                        {
                            <li class="list link-hover">
                                <a asp-controller="Countries" asp-action="Add">Add Country</a>
                            </li>
                        }

                    </ul>
                    </div>

                    </div>

                </div>

            
                <div class="body">
                    @RenderBody()
                </div>
                </div>
            </div>

@RenderSection("scripts", required : false)
</body>
</html>
